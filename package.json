{
  "name": "federated-learning-simulation",
  "version": "1.0.0",
  "description": "Simulating Federated Learning Process and Experimenting with Communication Techniques",
  "main": "simulator.ts",
  "scripts": {
    "start": "tsc && node dist/simulator.js",
    "build": "tsc",
    "deploy": "yarn install && tsc && pm2 start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ppeetteerrs/Federated-Learning.git"
  },
  "author": "Peter Yuen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ppeetteerrs/Federated-Learning/issues"
  },
  "homepage": "https://github.com/ppeetteerrs/Federated-Learning#readme",
  "devDependencies": {
    "husky": "^1.3.1",
    "pm2": "^3.5.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "inquirer": "^6.2.2",
    "shelljs": "^0.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "conda env export > env.yml && git add -A",
      "update": "yarn install && conda activate fl && conda env update -f=env.yml"
    }
  }
}